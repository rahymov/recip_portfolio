<%= form_for ([@recipe, @recipe.comments.build]) do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title, class: "form-control" %>
  <%= f.label :body %>
	<%= f.text_area :body, class: "form-control" %>
	<br>
	<%= f.hidden_field :recipe_id %>
	<%= f.submit class: "btn btn-primary" %>
<% end %>
