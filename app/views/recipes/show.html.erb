<div class="main_content">
	<div id="recipe_top" class="row">
		<div class="col-md-5">
			<span><%= image_tag @recipe.image.variant(resize: '500x500'), class: "recipe_image" %></span>
		</div>
		<div class="col-md-7">
			<div id="recipe_info">
				<h1><%= @recipe.title %></h1>
				<p class="description"><%= @recipe.description %></p>
				<p>Submitted by <%= link_to @recipe.user.email, root_url %></p>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-md-6">
			<div id="ingredients">
				<h2>Ingredients</h2>
				<ul>
					<% @recipe.categories do |cat| %>
						<h3><%= cat.name %></h3>
					<% end %>
					<%# @recipe.ingredients.each do |ingredient| %>
						<li><%#= ingredient.name %></li>
					<%# end %>
				</ul>
			</div>
		</div>
		<div class="col-md-6">
			<div id="directions">
				<h2>Directions </h2>
				<ul>
					<%# @recipe.directions.each do |direction| %>
						<li><%#= direction.step %></li>
					<%# end %>
				</ul>
			</div>
		</div>
	</div><br>
	<div class="row">
		<div class="col-md-12">
			<div class="btn-group">
				<%= link_to "Back", root_path, class: "btn btn-default" %>
				<% if current_user %>
  				<%= link_to "Edit", edit_recipe_path, class: "btn btn-default" %>
  				<%= link_to "Delete", recipe_path, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger " %>
				<% end %>
			</div>
		</div>
	</div>
</div>
